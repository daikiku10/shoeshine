<h1>お店の登録</h1>

<%= form_with model: @shop, local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">住所</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :address, class:"input-default", id:"address", placeholder:"例）神奈川県横浜市緑区青山1-1-1 柳ビル103", maxlength:"60" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">電話番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"09012345678 ハイフン不要" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">インスタグラムのユーザー名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :instagram, class:"input-default", id:"instagram", placeholder:"ユーザーページの左上" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">お店の場所をクリックしてください</label>
      <span class="indispensable">必須</span>
      <div id="new-map"></div>
      <%= f.hidden_field :lat, value: "", id:"lat" %>
      <%= f.hidden_field :lng, value: "", id:"lng" %>
    </div>
  </div>
  <div class="register-btn">
    <%= f.submit "店舗登録", class:"register-btn" %> 
  </div>

  </div>


<% end %>
